{
  "name": "section1983.org",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "diagrams": "mmdc -i diagrams/process-flowchart.mmd -o public/diagrams/process-flowchart.svg -t neutral -b transparent",
    "build": "npm run diagrams && GIT_COMMIT_SHA=${GIT_COMMIT_SHA:-$(git rev-parse --short=12 HEAD)} GIT_COMMIT_DIRTY=${GIT_COMMIT_DIRTY:-$(if git diff --quiet HEAD -- && [ -z \"$(git ls-files --others --exclude-standard)\" ]; then echo 0; else echo 1; fi)} astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@sentry/astro": "^10.39.0",
    "@tailwindcss/vite": "^4.2.0",
    "astro": "^5.17.3",
    "tailwindcss": "^4.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "eslint-plugin-astro": "^1.6.0",
    "mmdc": "^0.0.1",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1"
  }
}
