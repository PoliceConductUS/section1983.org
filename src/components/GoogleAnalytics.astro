---
const GA_ID =
  typeof import.meta.env.PUBLIC_GA_MEASUREMENT_ID === "string"
    ? import.meta.env.PUBLIC_GA_MEASUREMENT_ID.trim()
    : "";
const GA_ENABLED = GA_ID.length > 0;
---

{
  GA_ENABLED && (
    <>
      <script
        type="text/javascript"
        is:inline
        src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>
      <script type="text/javascript" is:inline define:vars={{ GA_ID }}>
        window.dataLayer = window.dataLayer || [];
        function gtag() {
          dataLayer.push(arguments);
        }
        gtag("js", new Date());
        gtag("config", GA_ID);
      </script>
    </>
  )
}
