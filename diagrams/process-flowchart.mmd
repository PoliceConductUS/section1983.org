    click F "/process/summary-judgment" _self
    click IA "/process/interlocutory-appeal" _self
    click IA2 "/process/interlocutory-appeal" _self
    click G "/process/pretrial" _self
    click H "/process/trial" _self
    click J "/process/post-trial-and-appeal" _self
    click K "/process/post-trial-and-appeal" _self
    click APP2 "/process/post-trial-and-appeal" _self
    click A2 "/primer/amended-complaint" _self
